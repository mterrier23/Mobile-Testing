<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetInsights_all.GetLocation">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightGray">
            <Label TextColor="Black" Text="Enter your ZipCode" AutomationId="GetZipCode" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Entry x:Name="location" AutomationId="EnterLocation" BackgroundColor="Black"></Entry>
            <Button Text="Find Pets" BackgroundColor="Blue" AutomationId="FindPetsButton" Clicked="FindPetsButton_OnClicked">
            </Button>
            <Button Text="I'm an Org Rep" TextColor="Black" Clicked="GoToOrgSite"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>